{
    "env": {
        "browser": true,
        "es2021": true
    },
    "globals": {
        "cy": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "eol-last": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".tsx", ".js", ".jsx"] }],
        "import/extensions": "off",
        "no-use-before-define": ["off", { "functions": true, "classes": true, "variables": true }],
        "no-underscore-dangle": "off",
        "comma-dangle": "off",
        "max-len": "off",
        "no-console": "off",
        "default-param-last": "off",
        "indent": "off",
        "no-return-assign": "off",
        "no-param-reassign":    "off",
        "import/prefer-default-export": "off",
        "no-tabs": "off",
        "react/jsx-one-expression-per-line": "off",
        "arrow-body-style": [0, "never"],
        "semi": "error",
        "react/jsx-indent": ["off", "tab", {"checkAttributes": false, "indentLogicalExpressions": true}],
        "jsx-quotes": ["warn", "prefer-single"],
        "react/function-component-definition": [0, { "namedComponents": "arrow-expression" }],
        "react/require-default-props": 0,
        "import/no-unresolved": 0,
        "no-unused-vars": 2
    }
}
